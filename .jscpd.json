{
  "threshold": 0,
  "minTokens": 40,
  "include": ["scripts/**/*.{ts,js}", "src/**/*.{ts,js}", "src/**/*.md"],
  "ignore": [
    "**/node_modules/**",
    "**/*.test.{ts,js}",
    "**/*.spec.{ts,js}",
    "**/*.d.ts",
    "**/*.config.{ts,js}",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/bin/**",
    "**/.claude/**",
    "**/.opencode/**",
    "**/README.md",
    "**/example-conversations/**"
  ],
  "format": ["javascript", "typescript", "markdown"],
  "reporters": ["console"],
  "skipComments": true,
  "gitignore": true,
  "overrides": [
    {
      "pattern": "**/*.md",
      "minTokens": 100,
      "minLines": 8
    }
  ]
}
