{
  "threshold": 0,
  "minTokens": 40,
  "include": ["scripts/**/*.{ts,js}", "src/**/*.{ts,js}"],
  "ignore": [
    "**/node_modules/**",
    "**/*.test.{ts,js}",
    "**/*.spec.{ts,js}",
    "**/*.d.ts",
    "**/*.config.{ts,js}",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/downloads/**",
    "**/bin/**"
  ],
  "format": ["javascript", "typescript"],
  "reporters": ["console"],
  "skipComments": true,
  "gitignore": true
}
